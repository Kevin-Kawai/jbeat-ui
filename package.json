{
  "name": "jbeat-ui",
  "version": "0.1.0",
  "description": "A minimal CSS-only UI system for blogs",
  "style": "dist/jbeat-ui.css",
  "files": [
    "dist",
    "src"
  ],
  "targets": {
    "default": {
      "distDir": "./dist"
    }
  },
  "scripts": {
    "dev": "parcel src/index.css --dist-dir dev-dist",
    "build": "parcel build src/index.css --dist-dir dist --no-source-maps && mv dist/index.css dist/jbeat-ui.css",
    "build:dev": "parcel build src/index.css --dist-dir dist && mv dist/index.css dist/jbeat-ui.css",
    "clean": "rm -rf dist dev-dist .parcel-cache",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "css",
    "ui",
    "design-system",
    "blog",
    "minimal"
  ],
  "author": "Kevin",
  "license": "MIT",
  "devDependencies": {
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/html": "^8.6.14",
    "@storybook/html-webpack5": "^8.6.14",
    "cssnano": "^6.0.2",
    "parcel": "^2.12.0",
    "postcss": "^8.4.32",
    "postcss-import": "^16.0.0",
    "postcss-preset-env": "^9.3.0",
    "storybook": "^8.6.14"
  }
}
